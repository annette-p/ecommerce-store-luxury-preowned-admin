{{#extends 'base'}}

    {{#block "content"}}
        <div class="row mt-4">
            {{!-- search input --}}
            <div class="row search-div">
                <div class="col">
                </div>
                <div class="col">
                    <div class="container-fluid">
                        <form class="d-flex mb-3" method="GET" action="/orders">
                            <input class="form-control me-2" type="search" name="search" placeholder="Search for orders" aria-label="Search">
                            <button class="btn btn-outline-success" type="submit">Search</button>
                        </form>
                    </div>
                </div>
                <div class="col-1">
                </div> 
            </div>
            {{!-- Nav tap --}}
            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item" role="presentation">
                    <a type="button" href="/orders" {{#if listOrders}}aria-selected="true"{{/if}} class="nav-link {{#if listOrders}}active{{/if}}">Orders</a>
                </li>
                {{#if editOrder }}
                <li class="nav-item" role="presentation">
                    <a type="button" href="/orders/{{order.id}}/update" {{#if editOrder}}aria-selected="true"{{/if}} class="nav-link {{#if editOrder}}active{{/if}}">Edit Order {{order.id}}</a>
                </li>
                {{/if}}
            </ul>
            {{!-- content --}}
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                    {{#block "orderContent"}}{{/block}}
                </div>
            </div>
        </div>

    {{/block}}

{{/extends}}