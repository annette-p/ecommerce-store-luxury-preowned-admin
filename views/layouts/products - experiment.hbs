{{#extends 'base'}}

    {{#block "content"}}
        <div class="row mt-4">
            {{!-- search & filter section --}}
            {{#block "searchSectionContent"}}{{/block}}
            
            {{!-- Nav tap --}}
            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item" role="presentation">
                    <a type="button" href="/products" {{#if productListing}}aria-selected="true"{{/if}} class="nav-link {{#if productListing}}active{{/if}}">Products</a>
                </li>
                <li class="nav-item" role="presentation">
                    <a type="button" {{#if addNewProductListing}}aria-selected="true"{{/if}} class="nav-link {{#if addNewProductListing}}active{{/if}}" href="/products/add"> + Add New</a>
                </li>
            </ul>
            {{!-- content --}}
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                    {{#block "productContent"}}{{/block}}
                </div>
            </div>
        </div>
        
    {{/block}}

{{/extends}}