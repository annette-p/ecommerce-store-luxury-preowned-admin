{{#extends 'base'}}

    {{#block "content"}}
        <div class="row mt-4">
            {{!-- Nav tap --}}
            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item" role="presentation">
                    <a type="button" href="/settings" {{#if updateMyProfile}}aria-selected="true"{{/if}} class="nav-link {{#if updateMyProfile}}active{{/if}}">My Profile</a>
                </li>
                <li class="nav-item" role="presentation">
                    <a type="button" {{#if changePassword}}aria-selected="true"{{/if}} class="nav-link {{#if changePassword}}active{{/if}}" href="/settings/change-password">Change Password</a>
                </li>
            </ul>
            {{!-- content --}}
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                    {{#block "profileContent"}}{{/block}}
                </div>
            </div>
        </div>
    {{/block}}

{{/extends}}