{{#extends 'base'}}

    {{#block "content"}}
        <div class="row mt-4">
            {{!-- search section --}}
            <div class="row search-div">
                <div class="col-1"></div>
                <div class="col"></div>
                {{!-- search input --}}
                <div class="col-4">
                    <div class="container-fluid">
                        <form class="d-flex mb-3" method="GET" action="/products">
                            <input class="form-control me-2" type="search" name="search" placeholder="Search" aria-label="Search">
                            <button class="btn btn-outline-success" type="submit">Search</button>
                        </form>
                    </div>
                </div>
                <div class="col-1"></div> 
            </div>
            {{!-- Nav tap --}}
            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item" role="presentation">
                    <a type="button" href="/products" {{#if productListing}}aria-selected="true"{{/if}} class="nav-link {{#if productListing}}active{{/if}}">Products</a>
                </li>
                <li class="nav-item" role="presentation">
                    <a type="button" {{#if addNewProductListing}}aria-selected="true"{{/if}} class="nav-link {{#if addNewProductListing}}active{{/if}}" href="/products/add"> + Add New</a>
                </li>
                {{#if editProduct }}
                <li class="nav-item" role="presentation">
                    <a type="button" aria-selected="true" class="nav-link active" href="/products/{{product.id}}/update"> Edit {{product.name}}</a>
                </li>
                {{/if}}
            </ul>
            {{!-- content --}}
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                    {{#block "productContent"}}{{/block}}
                </div>
            </div>
        </div>
        
    {{/block}}

{{/extends}}