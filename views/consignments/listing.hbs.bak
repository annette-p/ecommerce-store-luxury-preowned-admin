{{#extends 'base'}}

    {{#block "content"}}
        <div class="row mt-4">
            {{!-- search input --}}
            <div class="row search-div">
                <div class="col">
                </div>
                <div class="col">
                    <div class="container-fluid">
                        <form class="d-flex mb-3">
                            <input class="form-control me-2" type="search" placeholder="Search for orders" aria-label="Search">
                            <button class="btn btn-outline-success" type="submit">Search</button>
                        </form>
                    </div>
                </div>
                <div class="col-1">
                </div> 
            </div>
            {{!-- Nav tap --}}
            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home" type="button" role="tab" aria-controls="home" aria-selected="true">Orders</button>
                </li>
            </ul>
            {{!-- content --}}
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                    {{!-- Summary --}}  
                    <div class="row mt-4 text-center">
                        <div class="col mb-2">
                            All <span class="fst-italic">(23)</span>
                        </div>
                        <div class="col mb-2">
                            First evaluation <span class="fst-italic">(23)</span> 
                        </div>
                        <div class="col mb-2">
                            Official evaluation <span class="fst-italic">(23)</span>
                        </div>
                        <div class="col mb-2">
                            Rejected <span class="fst-italic">(23)</span>
                        </div>
                        <div class="col mb-2">
                            Cancelled <span class="fst-italic">(5)</span>
                        </div>
                        <div class="col mb-2">
                            Refund <span class="fst-italic">(2)</span>
                        </div>
                    </div>
                    {{!-- Table --}}
                    <table class="mt-4 table table-hover">
                        {{!-- header --}}
                        <thead>
                            <tr>
                                <th scope="col">Order#</th>
                                <th scope="col">Customer</th>
                                <th scope="col">Date</th>
                                <th scope="col">Product</th>
                                <th scope="col">Categories</th>
                                <th scope="col">Quantity</th>
                                <th scope="col">Condition</th>
                                <th scope="col">Status</th>
                                <th scope="col">Shipping Address</th>
                                <th scope="col">Action</th>
                                {{!-- view more will see product description, condition comment, images --}}
                            </tr>
                        </thead>
                        {{!-- content --}}
                        <tbody>
                            <tr>
                                <th scope="row">1</th>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td>official evaluation</td>
                                <td></td>
                                <td>
                                    <button type="button" class="btn btn-outline-success">View</button>
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">2</th>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td>rejected</td>
                                <td></td>
                                <td>
                                    <button type="button" class="btn btn-outline-success">View</button>
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">3</th>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td>accepted</td>
                                <td></td>
                                <td>
                                    <button type="button" class="btn btn-outline-success">View</button>
                                </td>
                            </tr>

                        </tbody>
                    </table>
                    {{!-- Update button --}}
                    <div class="row mt-3">
                        <div class="col-1">
                        </div> 
                        <div class="col">
                            <div class="d-grid gap-2 mt-3">
                                <button class="btn btn-outline-secondary" type="submit">Update</button>
                            </div>
                        </div>
                        <div class="col-1">
                        </div> 
                    </div>
                </div>
            </div>
        </div>

    {{/block}}

{{/extends}}