{{#extends 'consignments'}}
    {{#block "consignmentContent"}}
        <form method="POST">
            <input type="hidden" name="_csrf" value="{{csrfToken}}"/>
            <div class="row">
                <div class="row mt-4">
                    <h4>Update - Consignment #{{consignment.id}}</h4>
                </div>
                <div class="row mt-4">
                    <div class="col col-4">
                        <div class="card">
                            <div class="card-body">
                                {{{consignmentForm}}} 
                                <div class="d-grid gap-2">
                                    <input type="submit" class="btn btn-secondary mt-3" type="button" value="Update Consignment" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col col-8">
                        <div class="card mb-4">
                            <div class="card-body" style="width: 45rem;">
                                <div>
                                    {{!-- customer details --}}
                                    <div class="text-center"><h4>Customer</h4></div>
                                    <table class="mt-3 table table-striped">
                                        <thead>
                                            <tr>
                                                <th scope="col-4">Name</th>
                                                <th scope="col-4">Email</th>
                                                <th scope="col-4">Shipping Address</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                                <tr>
                                                    <td>
                                                        {{consignment.user.lastname}}, {{consignment.user.firstname}}
                                                    </td>
                                                    <td>{{consignment.user.email}}</td>
                                                    <td>{{consignment.user.shipping_address}}</td>
                                                </tr>
                                        </tbody>
                                    </table>
                                    {{!-- product details --}}
                                    <div class="mt-4 text-center"><h4>Product</h4></div>
                                    <table class="mt-3 mb-4 table table-striped">
                                        <thead>
                                            <tr>
                                                <th scope="col-4">Name</th>
                                                <th scope="col-4">Category</th>
                                                <th scope="col-4">Designer</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                                <tr>
                                                    <td>{{consignment.product.name}}</td>
                                                    <td>{{consignment.product.category.name}}</td>
                                                    <td>{{consignment.product.designer.name}}</td>
                                                </tr>
                                        </tbody>
                                    </table>
                                    {{!-- specification / selling price --}}
                                    <table class="mt-2 mb-4 table table-striped">
                                        <thead>
                                            <tr>
                                                <th scope="col-4">Specification</th>
                                                <th scope="col-4">Preferred Selling Price</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                                <tr>
                                                    <td>{{consignment.product.specifications}}</td>
                                                    <td>
                                                        SGD 
                                                        {{toFixed consignment.product.selling_price 2}}
                                                    </td>
                                                </tr>
                                        </tbody>
                                    </table>
                                    {{!-- condition --}}
                                    <table class="mt-2 mb-4 table table-striped">
                                        <thead>
                                            <tr>
                                                <th scope="col-4">Conditions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                                <tr>
                                                    <td>
                                                        {{consignment.product.condition}}. {{consignment.product.condition_description}}
                                                    </td>
                                                </tr>
                                        </tbody>
                                    </table>
                                    {{!-- button --}}
                                    <div class="d-grid gap-2">
                                        <a type="button" class="btn btn-secondary" href="/products/{{consignment.product.id}}/update">Edit Product</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    {{/block}}
{{/extends}}