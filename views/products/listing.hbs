{{#extends 'products'}}

    {{#block "productContent"}}
        <div class="row">
            {{!-- product listing table --}}
            <table class="mt-4 table table-hover">
                <thead>
                    <tr>
                        <th scope="col">ID#</th>
                        <th scope="col">Image</th>
                        <th scope="col">Name</th>
                        <th scope="col">Stock</th>
                        <th scope="col">Price</th>
                        <th scope="col">Designer</th>
                        <th scope="col">Category</th>
                        <th scope="col">Date</th>
                        <th scope="col">Active</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                {{!-- content --}}
                <tbody>
                    {{#each products}}
                    <tr>
                        <th scope="row">{{this.id}}</th>
                        <td>{{#if this.product_image_1}}<img src="{{this.product_image_1}}" width="100" height="100" />{{/if}}</td>
                        <td>{{this.name}}</td>
                        <td>{{this.quantity}}</td>
                        <td>{{this.selling_price}}</td>
                        <td>{{this.designer.name}}</td>
                        <td>{{this.category.name}}</td>
                        <td>{{sgtime this.updated_at}}</td>
                        <td>{{#if this.active}}Y{{else}}N{{/if}}</td>
                        <td>
                            <button type="button" class="btn btn-outline-secondary">Edit</button>
                            <button type="button" class="btn btn-outline-danger">Delete</button>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        
    {{/block}}

{{/extends}}