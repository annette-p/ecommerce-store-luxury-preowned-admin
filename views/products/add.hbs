{{#extends 'base'}}

    {{#block "content"}}
        <div class="row mt-4">
            <h4>Create New Product Listing</h4>
        </div>
        <div class="row mt-4">
            <div class="col">
                <div class="card" style="width: 35rem;">
                    <div class="card-body">
                        <form method="POST">
                            {{{productForm}}}
                        </form>
                        {{!-- <h6 class="card-subtitle mb-2 text-muted">Total Sales</h6> --}}
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card" style="width: 35rem;">
                    <div class="card-body">
                        <h6 class="card-subtitle mb-2 text-muted">Upload Images</h6>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-4 mb-4">
            <div class="d-grid gap-2">
                {{!-- <button class="btn btn-outline-secondary" type="button">Submit</button> --}}
                <input type="submit" class="btn btn-outline-secondary" type="button"/>
            </div>
        </div>
        
    {{/block}}

{{/extends}}